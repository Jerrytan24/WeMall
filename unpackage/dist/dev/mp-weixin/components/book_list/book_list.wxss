.bottom_div {
  display: flex;
  flex-wrap: wrap;
  flex: 1;
  margin-top: 7px;
}
.bottom_div .bottom_div_view {
  margin: 15px 3px 5px 2px;
  width: 360rpx;
  height: 500rpx;
  text-align: center;
  background-color: white;
}
.bottom_div .bottom_div_view image {
  width: 280rpx;
  height: 300rpx;
}
.bottom_div .bottom_div_view .info {
  margin-top: 14rpx;
  margin-left: 40rpx;
  text-align: left;
}
.bottom_div .bottom_div_view .info .bottom_div_title {
  text-overflow: ellipsis;
  color: black;
  overflow: hidden;
  font-size: 13px;
}
.bottom_div .bottom_div_view .info .isbn {
  color: red;
  font-size: 12px;
  margin-top: 10rpx;
}
.bottom_div .bottom_div_view .price {
  margin-top: 30rpx;
}
.bottom_div .bottom_div_view .price .p1 {
  color: red;
  font-size: 14px;
  display: inline-block;
  margin-right: 60rpx;
}
.bottom_div .bottom_div_view .price .p2 {
  color: #828282;
  font-size: 12px;
  display: inline-block;
  margin-left: 52rpx;
}
.shopWay {
  text-align: left;
  background-color: #ff0000;
  height: 16px;
  border-radius: 8px;
  font-size: 14px !important;
  color: #FFFFFF;
}

